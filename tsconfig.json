{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "skipLibCheck": true,

    "types": [
      "node",
      "./types/global.d.ts",
      "./types/webpack.d.ts",
      "./types/react.d.ts"
    ],
    "baseUrl": ".",
    "paths": {
      "home/Home": ["packages/ui/home/src/view/routes/Home"],
      "shell/Shell": ["packages/ui/shell/src/view/routes/Shell"]
    },
    "sourceMap": true,
    "jsx": "react"
  },
  "include": [
    "config/*",
    "packages/**/**/*",
    "webpack/**/*",
    "enums/*.ts",
    "utils.ts"
  ],
  "exclude": ["node_modules"]
}
